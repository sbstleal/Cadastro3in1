<UserControl x:Class="WpfAppCadastro.Views.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfAppCadastro.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="900">
	<UserControl.DataContext>
		<vm:PedidoViewModel/>
	</UserControl.DataContext>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
			<StackPanel Orientation="Vertical" Margin="0,0,10,0">
				<TextBlock Text="Cliente" />
				<ComboBox Width="200" ItemsSource="{Binding Pessoas}" SelectedItem="{Binding PessoaSelecionada}" DisplayMemberPath="Nome"/>
			</StackPanel>

			<StackPanel Orientation="Vertical" Margin="0,0,10,0">
				<TextBlock Text="Produto" />
				<ComboBox Width="200" ItemsSource="{Binding ProdutosDisponiveis}" SelectedItem="{Binding ProdutoSelecionado}" DisplayMemberPath="Nome"/>
			</StackPanel>

			<StackPanel Orientation="Vertical" Margin="0,0,10,0">
				<TextBlock Text="Quantidade" />
				<TextBox Width="100" Text="{Binding QuantidadeProduto, UpdateSourceTrigger=PropertyChanged}"/>
			</StackPanel>

			<StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="10,0,0,0">
				<Button Content="Adicionar" Command="{Binding AdicionarProdutoCommand}" CommandParameter="{Binding Path=(ProdutoSelecionado, QuantidadeProduto)}" Margin="0,0,0,5"/>
				<Button Content="Remover" Command="{Binding RemoverProdutoCommand}" CommandParameter="{Binding ProdutoSelecionado}" Margin="0,0,0,5"/>
				<Button Content="Finalizar" Command="{Binding FinalizarPedidoCommand}"/>
			</StackPanel>
		</StackPanel>

		<DataGrid Grid.Row="1" ItemsSource="{Binding ProdutosSelecionados}" SelectedItem="{Binding ProdutoSelecionado}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Produto" Binding="{Binding NomeProduto}" Width="*"/>
				<DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
				<DataGridTextColumn Header="Valor Unit." Binding="{Binding ValorUnitario}" Width="100"/>
				<DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
