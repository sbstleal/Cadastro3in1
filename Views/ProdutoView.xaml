<UserControl x:Class="WpfAppCadastro.Views.ProdutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:WpfAppCadastro.ViewModels"
             x:Name="ProdutoViewControl">
    <UserControl.DataContext>
        <viewModels:ProdutoViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding FiltroNome}" Width="200" Margin="5" PlaceholderText="Filtrar por Nome"/>
            <TextBox Text="{Binding FiltroCodigo}" Width="200" Margin="5" PlaceholderText="Filtrar por Código"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Text="{Binding FiltroValorMin}" Width="90" Margin="5" PlaceholderText="Valor Mínimo"/>
                <TextBox Text="{Binding FiltroValorMax}" Width="90" Margin="5" PlaceholderText="Valor Máximo"/>
            </StackPanel>
            <ListView ItemsSource="{Binding Produtos}" SelectedItem="{Binding ProdutoSelecionado}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding Nome}" Width="200"/>
                        <GridViewColumn Header="Código" DisplayMemberBinding="{Binding Codigo}" Width="100"/>
                        <GridViewColumn Header="Valor" DisplayMemberBinding="{Binding Valor}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
